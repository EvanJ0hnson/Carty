/**
 * Footer
 */
.section-footer {
  margin-top: 5rem;
  padding-top: 1rem;
  
  color: $clrWhite--1;
  background-color: $clrViolet;
}

.footer-item__wrapper {
  margin: 1rem;
}

.footer__link {
  display: inline-block;
  
  padding: 0 0 2px 0;
  
  border-bottom: 1px solid;
  border-bottom-color: $clrTransparentWhite75;
  
  color: inherit;
  text-decoration: none;
  line-height: 1;
  
  transition: border-bottom-color .25s ease;
  
  &:hover {
    border-bottom-color: currentColor;
  }
}

.footer-nav__list {
  color: $clrWhite--1;
}

.footer-nav__link {
  display: inline-block;
  
  margin: 0 0 .75rem 0;
  padding: 0 0 2px 0;
  
  border-bottom: 1px solid;
  border-bottom-color: $clrTransparent100;
  
  color: inherit;
  text-decoration: none;
  
  transition: border-bottom-color .25s ease;
  
  &:hover {
    border-bottom-color: currentColor;
  }
}
