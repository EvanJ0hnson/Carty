.top-menu {
  position: fixed;
  top: 0;
  right: 0;
  
  width: 100%;
  z-index: 1;
  
  display: flex;
  justify-content: flex-end;
  
  font-family: 'Work Sans', sans-serif;
}

.top-menu__list {
  display: flex;
  
  color: $clrWhite--1;
}

.top-menu__link {
  display: block;
  
  margin: 0 15px;
  padding: 15px 0;
  
  border-bottom: 1px solid;
  border-bottom-color: $clrTransparent100;
  
  color: inherit;
  text-decoration: none;
  
  transition: border-bottom-color .25s ease;
  
  &:hover {
    border-bottom-color: currentColor;
  }
}
