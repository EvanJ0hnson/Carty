/**
 * Cart
 */
 
 /**
 * Cart Widjet
 */
.cart-widjet__wrapper {
  position: absolute;
  
  top: 0;
  right: 0;
  
  margin: 10px;
}

.cart-widjet__body {
  $size = 50px;
  position: relative;
  
  width: $size;
  height: $size;

  cursor: pointer;
  border-radius: 100%;
  box-shadow: 0 2px 5px rgba(0,0,0,0.2);
  
  color: $clrGrey900;
  fill: currentColor;
  
  transition: box-shadow .25s ease;
    
  &:hover {
    box-shadow: 0 3px 7px rgba(0,0,0,0.3);
  }
}

.cart-widjet__data {
  $size = 15px;
  
  position: absolute;
  top: 10px;
  right: 10px;
  
  width: $size;
  height: $size;

  padding: 1px;

  font-family: sans-serif;
  font-size: .75rem;
  text-align: center;

  background-color: $clrWhite;

  border-radius: 100%;
} 
 
 /**
 * Cart table
 */
.cart-table {
  width: 100%;
  border-collapse: collapse;
  
  font-size: 1rem;
  
  text-align: left;
}

.cart-table__caption > td {
  font-size: .75rem;
  font-weight: 700;

  padding: 5px 5px 15px 5px;
}

.cart-table__row {
  &:nth-child(odd) {
    background-color: rgba(0, 0, 0, .02);
  }
}

.cart-table__row > td {
  padding: 15px 0;
}

.cart-table__item-amount {
  margin: 5px;
}
