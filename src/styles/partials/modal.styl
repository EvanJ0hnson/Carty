/**
 * Modal window
 */
.modal__wrapper {
  position: fixed;
  
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;

  background-color: $clrTransparent25;
}

.modal__body {
  position: relative;
  z-index: 12;
  
  max-width: 960px;
  
  margin: 3rem auto;
  padding: 0 1.5rem;
}

.modal__content {
  padding: 1rem; 
  
  background-color: $clrWhite;
}

.modal__btn-close {
  display: inline-block;
  position: absolute;
  
  top: 0;
  right: 0;
  
  padding: 0 .5rem 1rem 0;
  
  font-family: sans-serif;
  font-size: 1rem;
  line-height: 1;
  
  color: $clrWhite;
  
  cursor: pointer;
  user-select: none;
  opacity: .5;
  
  transition: opacity .25s ease;

  &:hover {
    opacity: 1;
  }
}
