/**
 * Modal window
 */
.modal__wrapper {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  
  z-index: 11;

  background-color: $clrTransparent25;
}

.modal__body {
  position: relative;
  z-index: 12;
  
  margin: 3rem;
  padding: 1rem;
  
  background-color: #fff;
}

.modal__btn-close {
  position: absolute;
  display: inline-block;
  z-index: 12;
  
  top: 0;
  right: -2.125rem;
  
  font-size: 1rem;
  padding: 0 1rem 1rem 0;
  
  color: #fff;

  cursor: pointer;
  transition: opacity .25s ease;
  
  user-select: none;
  opacity: .75;

  &:hover {
    opacity: 1;
  }
}
