/**
 * Section: Core
 */
@import '../base/colors.styl'
  
.section {
  position: relative;
  
  padding: 5rem 1rem 1rem 1rem;

  line-height: 1.4;

  cursor: default;

  color: $clrBlack--3;
}

.section__content-wrapper {
  position: relative;
  
  max-width: 960px;
  
  margin: 0 auto;
}

.section__title {
  margin: 0 0 2rem 0;

  font-size: 2rem;
}

.section__link {
  display: inline-block;
  
  padding: 0 0 2px 0;
  
  border-bottom: 1px solid;
  border-bottom-color: $clrTransparent90;
  
  color: inherit;
  text-decoration: none;
  
  transition: border-bottom-color .25s ease;
  
  &:hover {
    border-bottom-color: currentColor;
  }
}

/**
 * Section: Features
 */
.features-list {
  margin: 3rem 0 0 1rem;
  
  list-style: disc inside;
}

.features-list__item {
  margin-bottom: .5rem;
}
