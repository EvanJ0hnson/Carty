<h1 class="">Банкетное меню</h1>
<table class="cart-table">
  <thead>
    <tr class="cart-table__caption">
      <td></td>
      <td>Название</td>
      <td>Цена</td>
      <td>Количество</td>
      <td>Сумма</td>
    </tr>
  </thead>
  <tbody>
    {{#each order}}
    <tr class="cart-table__row">
      <td>{{number}}</td>
      <td>{{name}}</td>
      <td>{{price}} <span class="fa fa-rub"></span></td>
      <td>
        <button id="vtCartItemDecrease{{id}}" class="btn btn--add">-</button>
        {{count}}
        <button id="vtCartItemIncrease{{id}}" class="btn btn--add">+</button>
      </td>
      <td>{{sum}}</td>
      <td>
        <button id="vtCartItemRemove{{id}}" class="btn btn--add">x</button>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
<div class="cart-footer">
  <span>Общая сумма: {{total}} <span class="fa fa-rub"></span></span>
</div>
